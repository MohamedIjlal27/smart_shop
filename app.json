{
  "expo": {
    "name": "Smart Shop",
    "slug": "smart-shop",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "assets/*",
      "!assets/**/*.psd",
      "!assets/**/*.ai",
      "!assets/**/*.sketch",
      "!**/*.test.*",
      "!**/*.spec.*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.smartshop.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes for point redemption."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.smartshop.app",
      "enableProguardInReleaseBuilds": true,
      "enableShrinkResources": true,
      "permissions": ["CAMERA"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access camera."
        }
      ]
    ],
    "scheme": "smart-shop",
    "experiments": {
      "tsconfigPaths": true
    },
    "newArchEnabled": true,
    "jsEngine": "hermes"
  }
}
